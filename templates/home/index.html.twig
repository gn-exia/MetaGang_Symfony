{% extends "base.html.twig" %}

{% block body %}
	<div class="container">
		<div class="row">
			{% for item in items %}
				<div class="col">
					<div class="card mt-3">
						<h5 class="card-header">{{item.name}}</h5>
						<div class="card-body">
							<h5 class="card-title">{{item.name}}</h5>
							{% if app.request.attributes.get('_route') == 'home' %}
								<p class="card-text">{{item.description | u.truncate(64, '...')}}</p>

								Lire la suite
							</a>
						{% else %}
							<p class="card-text">{{item.clan}}</p>
							<a href="{{ path('home') }}" class="btn btn-primary">
								Retour
							</a>
						{% endif %}
					</div>
				</div>
			</div>
			{% if loop.index is divisible by(3) %}
			</div>
			<div class="row">
			{% endif %}
		{% endfor %}
	</div>
</div>{% endblock %}
