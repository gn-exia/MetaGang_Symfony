{% extends "base.html.twig" %}

{% block body %}
	<div class="container">
		<div class="row">
			{% for item in items %}
				<div class="col">
					<div class="card mt-3">
						<h5 class="card-header">{{item.name}}</h5>
						<div class="card-body">
							<div
								class="cardImg">
								{# <div class="card" style="background-image: url('{{ item.UrlImage }}');"></div> #}
								<style class="hover"></style>
							</div>
							<div class="card-text">
								<h5 class="card-title">{{item.name}}</h5>
								{% if app.request.attributes.get('_route') == 'home' %}
									<p class="card-text">{{item.description | u.truncate(64, '...')}}</p>
									Lire la suite
								</a>
							</div>
						{% else %}
							<p class="card-text">{{item.clan}}</p>
							<a href="{{ path('home') }}" class="btn btn-primary">
								Retour
							</a>
						{% endif %}
					</div>
				</div>
			</div>
			{% if loop.index is divisible by(3) %}
			</div>
			<div class="row">
			{% endif %}
		{% endfor %}
	</div>
</div>{% endblock %}
